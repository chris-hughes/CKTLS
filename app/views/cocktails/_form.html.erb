<%= form_for(@cocktail) do |f| %>
	 
	<%= render 'shared/cocktail_error_messages' %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :family %>
	<%= f.select(:family, [["Fruity"],["Refreshing"]]) %>

	<%= f.label :makes %>
	<%= f.number_field :makes, min: 1 %>

	<%= f.label :glass %>
	<%= f.select :glass, [["Wine glass"],["Martini glass"]] %>

	<%= f.label :chilled %>
	<%= f.select :chilled, [["No","FALSE"],["Yes","TRUE"]] %>

	<%= f.fields_for :tools do |builder| %>
		<%= builder.label :tool %>
		<%= builder.text_field :tool %>

		<%= builder.check_box :_destroy %>
		<%= builder.label :_destroy, "Remove tool" %>
	<% end %>

	<%= f.fields_for :ingredients do |builder| %>
		<%= builder.label :ingredient %>
		<%= builder.text_field :ingredient %>

		<%= builder.label :measure %>
		<%= builder.number_field :measure, min: 0 %>

		<%= builder.label :decoration %>
		<%= builder.check_box :decoration %><br/>

		<%= builder.check_box :_destroy %>
		<%= builder.label :_destroy, "Remove ingredient" %>
	<% end %>

	<%= f.fields_for :directions do |builder| %>
		<%= builder.label :direction %>
		<%= builder.text_area :direction, rows: 3 %>

		<%= builder.check_box :_destroy %>
		<%= builder.label :_destroy, "Remove direction" %>
	<% end %>

    <%= f.submit "Create my cocktail", class: "btn btn-large btn-primary" %>

<% end %>
<%= nested_form_for(@cocktail) do |f| %>
	 
	<%= render 'shared/cocktail_error_messages' %>

	<p>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :family %>
		<%= f.select(:family, [["Fruity"],["Refreshing"]]) %>

		<%= f.label :makes %>
		<%= f.number_field :makes, min: 1 %>

		<%= f.label :glass %>
		<%= f.select :glass, [["Wine glass"],["Martini glass"]] %>

		<%= f.label :chilled %>
		<%= f.select :chilled, [["No","FALSE"],["Yes","TRUE"]] %>

	</p>

	<%= f.fields_for :tools %>

	<p><%= f.link_to_add "Add a tool", :tools %></p>

	<%= f.fields_for :ingredients %>

	<p><%= f.link_to_add "Add an ingredient", :ingredients %></p>

	<%= f.fields_for :directions %>

	<p><%= f.link_to_add "Add a direction", :directions %></p>

    <%= f.submit "Create my cocktail", class: "btn btn-large btn-primary" %>

<% end %>
<% provide(:title, 'Edit cocktail') %>
<h1>Update cocktail</h1>
<div class="row">
	<div class="span6 offset3">

		<%= form_for(@cocktail) do |f| %>
			 
			<%= render 'shared/cocktail_error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :family %>
			<%= f.select(:family, [["Fruity"],["Refreshing"]]) %>

			<%= f.label :makes %>
			<%= f.number_field :makes, min: 1 %>

			<%= f.label :glass %>
			<%= f.select :glass, [["Wine glass"],["Martini glass"]] %>

			<%= f.label :chilled %>
			<%= f.select :chilled, [["No","FALSE"],["Yes","TRUE"]] %>

		    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>

		<% end %>

	</div>
</div>
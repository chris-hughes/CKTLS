<% provide(:title, 'Cocktails') %>
<div class="center hero-unit">
	<h1>Cocktails</h1>
	<p>We're gunna fill this up with so many cocktails</p>
	<p>
    	<a class="btn btn-primary btn-large">
      	Can't wait!
    	</a>
  	</p>
</div>
<div class="center hero-unit">

	<%= will_paginate %>
	<ul class="cocktails">
		<% @cocktails.each do |cocktail| %>
			<li><%= link_to cocktail.name, cocktail %></li>
			<% if signed_in? %>
				<% if current_user.admin? %>
					| <%= link_to "delete", cocktail, method: :delete, data: { confirm: "You sure?" } %>
				<% end %>
			<% end %>
		<% end %>
	</ul>
	<%= will_paginate %>

</div>
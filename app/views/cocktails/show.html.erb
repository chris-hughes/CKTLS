<% provide(:title, @cocktail.name.titleize) %>
<div class="row">
	<aside class="span4">
		<section>
			<h2>
				<%= @cocktail.family.titleize %>
			</h2>
			<h1>
				<%= @cocktail.name.titleize %>
			</h1>
			<%= render 'cocktails/tools' %>
			<p>
				<ul>
					<% @cocktail.ingredients.each do |ingredient| %>
		    			<li>
							<%= ingredient.measure %> <%= ingredient.unit %> <%= ingredient.ingredient %>
							<% if ingredient.decoration? %>
								,decoration
							<% end %>
						</li>
		  			<% end %>
		  		</ul>
		  	</p>
		</section>
	</aside>
</div>
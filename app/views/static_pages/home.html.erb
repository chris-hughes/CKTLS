<% provide(:title, 'Home') %>
<div class="center hero-unit">

	<div class="row-fluid">
		<h1 id="logo">CKTLS</h1>

		<% if !signed_in? %>
			<p>Boring party? Friends coming over? Let <em>CKTLS</em> find the right cocktail for any occasion</p>
			<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
		<% else %>
			<p>Start enjoying cocktails now!</p>
			<%= link_to "List all cocktails!", cocktails_path, class: "btn btn-large btn-primary" %>
			<%= link_to "Jump to favourites", user_path(@user), class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
	<br/>
	
</div>
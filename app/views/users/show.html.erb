<% provide(:title, @user.name) %>
<div class="row-fluid">
	<div class="span2">
		<aside>
			<section>
				<h1>
					<%= gravatar_for @user %>
					<%= @user.name %>
				</h1>
			</section>
		</aside>
	</div>
	<div class="span8">
		<h1>My Cocktails</h1>
		<h2 id="favourites">My Favourites</h2>
		<ul class="cocktails">
			<%= render @cocktails %>
		</ul>
	</div>
</div>